<?xml version="1.0" encoding="utf-8"?>
<!--登录页面布局-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/loginandreg">
    <!--手机号-->
    <EditText
        android:textStyle="bold"
        android:textColor="#c61573"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_80"
        app:layout_constraintBottom_toTopOf="@id/view1"
        android:layout_marginRight="@dimen/dp_45"
        android:hint="手机号"
        android:textSize="@dimen/sp_18"
        android:textColorHint="#ffffff"
        android:id="@+id/login_ed_phone"
        />

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/log_icon_phone_default_xxhdpi"
        app:layout_constraintBottom_toTopOf="@id/view1"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        android:layout_marginBottom="@dimen/dp_10"
        />
    <View
        android:id="@+id/view1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_45"
        android:layout_height="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_45"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_200"
        />
    <!--密码-->
    <EditText
        android:textStyle="bold"
        android:textColor="#c61573"
        android:layout_marginTop="@dimen/dp_230"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_45"
        android:hint="登录密码"
        android:password="true"
        app:layout_constraintBottom_toTopOf="@id/view2"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_18"
        android:textColorHint="#ffffff"
        android:id="@+id/login_ed_password"
        />
    <ImageView
        app:layout_constraintRight_toRightOf="@id/view2"
        app:layout_constraintBottom_toTopOf="@id/view2"
        android:id="@+id/showhide_pwd"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_15"
        android:src="@mipmap/log_icon_eye_default_xxhdpi"
        />
    <ImageView
        app:layout_constraintBottom_toTopOf="@id/view2"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="@id/view2"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_230"
        android:src="@mipmap/log_icon_lock_default_xxhdpi"

        />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_45"
        android:background="#ffffff"
        android:layout_marginRight="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_80"
        app:layout_constraintTop_toBottomOf="@id/view1"
        />
<!--记住密码-->
    <CheckBox
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:id="@+id/login_ck_jzmm"
        android:layout_marginTop="@dimen/dp_18"
        android:theme="@style/MyEditText"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintLeft_toLeftOf="@id/view2"

        />
    <TextView
        android:id="@+id/tv_jzmm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@id/login_ck_jzmm"
        app:layout_constraintTop_toTopOf="@id/login_ck_jzmm"

        />
    <!--自动登录-->
    <CheckBox
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:id="@+id/login_ck_zddl"
        android:layout_marginLeft="@dimen/dp_10"
        android:theme="@style/MyEditText"
        app:layout_constraintLeft_toRightOf="@id/tv_jzmm"
        app:layout_constraintTop_toTopOf="@id/tv_jzmm"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动登录"
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@id/login_ck_zddl"
        app:layout_constraintTop_toTopOf="@id/login_ck_zddl"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速注册"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="@id/login_ck_zddl"
        app:layout_constraintRight_toRightOf="@id/view2"
        android:id="@+id/login_tv_toregister"
        />

    <LinearLayout

       android:layout_marginBottom="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45"
        android:orientation="horizontal"
        android:id="@+id/ll"
      app:layout_constraintBottom_toTopOf="@id/login_wechat"

        >
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="第三方账号快速登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
      android:layout_marginBottom="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
         android:id="@+id/login_wechat"
      app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/log_icon_weixin_default_xxhdpi"
        />
    <Button
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45"
        android:id="@+id/login_btn_login"
        android:text="登录"
        android:background="@drawable/shape_login"
        android:textSize="@dimen/sp_18"
        android:textColor="#ffffff"
       app:layout_constraintBottom_toTopOf="@id/ll"

        />
</android.support.constraint.ConstraintLayout>